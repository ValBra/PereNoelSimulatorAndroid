<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/polemploi"
    android:id="@+id/sv3"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verti150"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="@dimen/size30"
        android:textStyle="bold"
        android:text=""/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/size30"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="@dimen/eth"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/verti20"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/but4"
        android:layout_width="@dimen/buth180"
        android:layout_height="@dimen/butv50"
        android:layout_gravity="center"
        android:textSize="@dimen/size15"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/custbuttons"
        android:layout_marginTop="@dimen/verti30"
        android:text="@string/confirm" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adV1"
        android:layout_marginTop="@dimen/verti150"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8018946824008626/4792111897"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    </ScrollView>